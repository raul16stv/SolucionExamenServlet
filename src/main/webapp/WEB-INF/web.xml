<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_3_1.xsd"
    version="3.1">
	<display-name>Archetype Created Web Application</display-name>

	<servlet>
		<servlet-name>WelcomeServlet</servlet-name>
		<servlet-class>ExamenRaul.ServletDDI.WelcomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WelcomeServlet</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>
		<servlet>
		<servlet-name>VideoJuegosServlet</servlet-name>
		<servlet-class>Servlet.VideoJuegosServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>VideoJuegosServlet</servlet-name>
		<url-pattern>/videojuegos</url-pattern>
	</servlet-mapping>

	<servlet>
        <servlet-name>ListConsolaServlet</servlet-name>
        <servlet-class>Servlet.ListConsolaServlet</servlet-class>
    </servlet>
	<servlet-mapping>
		<servlet-name>ListConsolaServlet</servlet-name>
        <url-pattern>/cargarListado</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListGamesServlet</servlet-name>
        <servlet-class>Servlet.ListGamesServlet</servlet-class>
    </servlet>
	<servlet-mapping>
        <servlet-name>ListGamesServlet</servlet-name>
        <url-pattern>/cargarListadoGames</url-pattern>
    </servlet-mapping>
    	<servlet>
		<servlet-name>DeleteServlet</servlet-name>
		<servlet-class>Servlet.DeleteServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DeleteServlet</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>AltaVideojuegos.jsp</welcome-file>
	</welcome-file-list>

</web-app>
